{
  "name": "task-manager-app-frontend",
  "version": "0.0.0",
  "type": "module",
  "description": "In this full-stack challenge, you will develop a straightforward task management application, which will involve implementing essential HTTP methods such as GET, POST, PUT, and DELETE. This project will provide an opportunity to demonstrate proficiency in full-stack development by creating a system that enables users to manage tasks using a range of fundamental HTTP operations.",
  "homepage": "",
  "repository": {
    "type": "git",
    "url": "https://github.com/ifeelBALANCED/task-manager-app-frontend.git"
  },
  "bugs": {
    "url": "https://github.com/ifeelBALANCED/task-manager-app-frontend/issues",
    "email": "vladislavherasymenko@gmail.com"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite --open",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "https-preview": "serve dist",
    "prepare": "husky install",
    "format:write": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "lint:check": "eslint --max-warnings=0 --no-ignore \"src/**/*.{js,jsx,ts,tsx,json}\"",
    "lint:fix": "eslint . --fix",
    "ts:check": "tsc --noEmit",
    "test:unit": "vitest --passWithNoTests",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "dep-cruiser:preview": "npx depcruise src --include-only \"^src\" --output-type dot | dot -T svg > dependency-graph-preview.svg"
  },
  "dependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@farfetched/core": "^0.12.5",
    "@farfetched/dev-tools": "^0.12.5",
    "@mantine/charts": "^7.12.2",
    "@mantine/core": "^7.12.0",
    "@mantine/dates": "^7.12.2",
    "@mantine/hooks": "^7.12.0",
    "@mantine/spotlight": "^7.12.1",
    "@tabler/icons-react": "^3.12.0",
    "@types/react-router-dom": "^5.3.3",
    "@withease/contracts": "^1.0.0",
    "@withease/factories": "^1.0.5",
    "axios": "^1.7.3",
    "axios-retry": "^4.5.0",
    "classnames": "^2.5.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.12",
    "dotenv": "^16.4.5",
    "effector": "^23.2.2",
    "effector-forms": "2.0.0-next.1",
    "effector-react": "^23.2.1",
    "effector-storage": "^7.1.0",
    "history": "^5.3.0",
    "lodash": "^4.17.21",
    "patronum": "^2.2.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-error-boundary": "^4.0.11",
    "react-helmet-async": "^2.0.3",
    "react-hotkeys-hook": "^4.4.1",
    "react-router-dom": "6.16.0",
    "recharts": "2.13.0-alpha.4",
    "vite-plugin-checker": "^0.7.2",
    "yup": "^1.4.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-decorators": "7.22.7",
    "@babel/preset-react": "7.22.3",
    "@babel/preset-typescript": "7.21.5",
    "@faker-js/faker": "^8.4.1",
    "@feature-sliced/eslint-config": "^0.1.1",
    "@neodx/svg": "^0.7.1",
    "@playwright/test": "^1.46.1",
    "@trivago/prettier-plugin-sort-imports": "^4.3.0",
    "@types/lodash": "^4.17.7",
    "@types/node": "^22.2.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "10.4.16",
    "dependency-cruiser": "^16.4.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-boundaries": "^4.2.2",
    "eslint-plugin-effector": "0.11.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "playwright": "^1.46.1",
    "postcss": "^8.4.41",
    "postcss-nesting": "^12.1.5",
    "postcss-preset-mantine": "^1.17.0",
    "postcss-simple-vars": "^7.0.1",
    "prettier": "3.1.1",
    "tailwindcss": "^3.4.9",
    "typescript": "^5.3.3",
    "vite": "^5.4.0",
    "vite-plugin-pwa": "^0.17.4",
    "vitest": "^1.1.3"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ],
    "src/**/*.{js,jsx,ts,tsx,json}": [
      "eslint --max-warnings=0 --no-ignore"
    ]
  },
  "author": {
    "name": "ifeelBALANCED",
    "email": "vladislavherasymenko@gmail.com"
  },
  "keywords": [
    "react",
